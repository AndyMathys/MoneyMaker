<%= form_for(@invoice) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :partner_id %><br />
    <%= collection_select :invoice, :partner_id, Partner.all, :id, :name,{:selected => @invoice.partner_id} %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :total %><br />
    <%= f.number_field :total %>
  </div>
  <div class="field">
    <%= f.label :vat %><br />
    <%= f.number_field :vat %>
  </div>
  <div class="field">
    <%= f.label :creation_date %><br />
    <%= f.date_select :creation_date %>
  </div>
  <div class="field">
    <%= f.label :payment_date %><br />
    <%= f.date_select :payment_date %>
  </div>

  <div class="field">
    <%= f.label :paid %><br />
    <%= f.check_box :paid %>
  </div>

  <div class="field">
    <%= f.label :number %><br />

    <%if @lastInvoice %>
        <%=f.number_field :number, :value => @lastInvoice.number+1 %>
    <% else %>
        <%=f.number_field :number %>
    <% end%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
